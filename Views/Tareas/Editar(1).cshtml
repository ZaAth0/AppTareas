@model AppTareas.Models.Tarea
<h1 style="font-family: Arial, sans-serif;">Editar Tarea</h1>
@if(!ViewData.ModelState.IsValid){
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in
           ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EstaCompletado"></label>
        <input asp-for="EstaCompletado" class="form-check-input" type="checkbox" />
        <span asp-validation-for="EstaCompletado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
@section  Scripts {
    <partial name="_ValidationScriptsPartial" />
}
